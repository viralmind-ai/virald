{
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "target": "ESNext",
        "module": "node16",
        "moduleResolution": "node16",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true
    },
    "include": [
        "src/**/*.ts",
        "@girs/atspi-2.0",
        "@girs/gjs"
    ]
}
